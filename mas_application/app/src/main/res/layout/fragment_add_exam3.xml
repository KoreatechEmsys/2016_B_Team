<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.pelkan.tab.AddExamActivity$PlaceholderFragment">
    <com.pelkan.tab.CheckableLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/question_count"
                android:text="시험정보를 입력하세요"
                android:paddingBottom="8dp"
                android:textSize="17dp"
                android:textColor="#000000"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:background="@drawable/textlines_white"
                android:layout_height="wrap_content" />
            <TextView
                android:text="시험 이름"
                android:padding="8dp"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/title"
                    android:layout_width="200dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:text="시험일자"
                android:padding="8dp"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/month"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="월 "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:gravity="center"/>
                <EditText
                    android:id="@+id/day"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="일 "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:gravity="center"/>
                <EditText
                    android:id="@+id/hour"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="시 "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:gravity="center"/>
                <EditText
                    android:id="@+id/minitue"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="분"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:text="제한시간"
                android:padding="8dp"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/limit_time"
                    android:layout_width="45dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="분"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </com.pelkan.tab.CheckableLinearLayout>
</RelativeLayout>

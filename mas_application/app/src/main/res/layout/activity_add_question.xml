<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00BFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/radio_group1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/level1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="1" />

            <RadioButton
                android:id="@+id/level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="2" />
            <RadioButton
                android:id="@+id/level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="3" />
            <RadioButton
                android:id="@+id/level4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="4" />
            <RadioButton
                android:id="@+id/level5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="5" />
        </RadioGroup>
        <RadioGroup
            android:id="@+id/radio_group2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/level6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="6" />

            <RadioButton
                android:id="@+id/level7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="7" />
            <RadioButton
                android:id="@+id/level8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="8" />
            <RadioButton
                android:id="@+id/level9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="9" />
            <RadioButton
                android:id="@+id/level10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="10" />
        </RadioGroup>


        <TextView
            android:id="@+id/nick_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:textSize="30dip" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#00BFFF"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/galleryBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/ic_insert_photo_white_48dp"
                android:background="#00BFFF"
                android:layout_gravity="left" />
            <ImageButton
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="261dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/ic_camera_alt_white_48dp"
                android:background="#00BFFF"
                android:layout_gravity="right" />
        </LinearLayout>
        <EditText
            android:id="@+id/add_content"
            android:hint="내용"
            android:textColorHint="#c0c0c0"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="top"
            android:textSize="30dip" />
        <AutoCompleteTextView
            android:id="@+id/keyword_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:completionThreshold="1"
            android:ems="10"
            android:hint="키워드를 입력하세요"
            android:imeOptions="actionSearch"
            android:singleLine="true"/>
        <Button
            android:id="@+id/add_keyword"
            android:text="키워드 추가"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip" />
        <TextView
            android:id="@+id/my_keyword_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip" />
        <Button
            android:id="@+id/add_button"
            android:text="등록완료"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:layout_gravity="right"/>
    </LinearLayout>

</LinearLayout>

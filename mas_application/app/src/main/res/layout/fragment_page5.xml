<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab$PlaceholderFragment">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            >
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textlines_white"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/response_title"
                    android:textSize="17dp"
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:paddingLeft="2dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/view_count"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:textColorHint="#c0c0c0"
                        android:paddingRight="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/r_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#ffffff"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:layout_below="@+id/linearLayout"/>
            <LinearLayout
                android:layout_below="@+id/r_image"
                android:id="@+id/videoView_layout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:background="#000000">
                <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:id="@+id/videoView"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/videoView_layout"
                android:padding="5dp"
                android:background="@drawable/textlines_white">
                <TextView
                    android:id="@+id/r_content"
                    android:paddingLeft="2dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#c0c0c0"
                    android:background="#ffffff"
                    android:paddingBottom="20dp"
                    android:gravity="top"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_layout"
                android:background="@drawable/textlines_white"
                android:padding="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/profile_img"
                    android:src="@drawable/ic_person_add_black_48dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <TextView
                    android:id="@+id/responser_id"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:textColorHint="#c0c0c0"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/add_correct"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/linearLayout1"
                android:paddingRight="5px"
                android:background="@drawable/textlines_white"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="right">
                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="9dp"
                    android:paddingLeft="27dp"
                    android:paddingRight="27dp"
                    android:paddingTop="9dp"
                    fancy:fb_borderColor="@color/actionbar"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/actionbar"
                    fancy:fb_focusColor="@color/btn2"
                    fancy:fb_radius="15dp"
                    fancy:fb_text="정답"
                    fancy:fb_textColor="#FFFFFF"
                    android:layout_gravity="right" />
            </LinearLayout>
</TableLayout>
    </ScrollView>
</RelativeLayout>
